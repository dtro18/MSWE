{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx", // Important for React 17+ JSX transform
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["*.ts", "*.tsx", "src/main.tsx"],
  "exclude": ["node_modules"]
}
